<%= render 'shared/errors', obj: @recipe %>

<%= form_for(@recipe, :html => {class: 'form-horizontal', role: 'form'}) do |form| %>
  <div class="form-group">
      <%= form.label :name, class: "control-label col-md-2" %>
    <div class="col-md-8">
    <%= form.text_field :name, class: "form-control", placeholder: "Recipe Name", autofocus: true %>
    </div>
  </div> <!--form group -->

  <div class="form-group">
      <%= form.label :description, class: "control-label col-md-2" %>
    <div class="col-md-8">
    <%= form.text_area :description, class: "form-control", placeholder: "What steps do we need to follow?", rows: 15 %>
    </div>
  </div> <!--form group -->
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= form.submit "Submit", class: "btn btn-default btn-red btn-lg" %>
      </div>
    </div>
  </div> <!--form group -->
<% end %>
